@model IEnumerable<CustomisationFields>

@foreach (var field in Model)
{
    var id = field.Key;
    <div class="">
        @if (field.Type == CustomisationFieldType.Boolean)
        {
            <label for="@id" class="flex flex-row gap-2 items-center">
                <input name="cf_@id" id="@id" type="checkbox" class="peer hidden" />
                <span class="transition-all w-5 h-5 bg-neutral-100 border border-neutral-200 peer-checked:bg-blue-600 peer-checked:bg-blue-700 text-white/0 peer-checked:text-white flex items-center justify-center rounded-md text-md">
                    <i class="bi bi-check-lg"></i>
                </span>

                <span class="flex-1">
                    <span class="block leading-none text-sm">@field.Label</span>
                    @if (!string.IsNullOrEmpty(field.Description))
                    {
                        <span class="block leading-none text-xs opacity-60 mt-0.5">@field.Description</span>
                    }
                </span>
            </label>
        }
        else
        {
            <label for="@id">
                <span class="block leading-none text-sm">@field.Label</span>
                @if (!string.IsNullOrEmpty(field.Description))
                {
                    <span class="block leading-none text-xs opacity-50 mt-0.5">@field.Description</span>
                }
            </label>
            <input name="cf_@id" id="@id" class="input w-full mt-2" type="@((field.Type == CustomisationFieldType.Int || field.Type == CustomisationFieldType.Decimal) ? "number" : "text")" placeholder="@field.Label" />
        }
    </div>
}