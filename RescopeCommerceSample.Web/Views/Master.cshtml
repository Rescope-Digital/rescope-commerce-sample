@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;
    var home = Model.AncestorOrSelf<Home>(1);
}
<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://cdn.jsdelivr.net/npm/nice-select2@2.1.0/dist/js/nice-select2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/nice-select2@2.1.0/dist/css/nice-select2.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="/css/dist.css" type="text/css" rel="stylesheet" asp-append-version="true">
    @await RenderSectionAsync("head", false)
</head>

<body class="@(ViewData.ContainsKey("HideNav") ? "" : "pt-16")">
    @if (!ViewData.ContainsKey("HideNav"))
    {
        @await Html.PartialAsync("Navbar")
    }

    <div>
        @RenderBody()
    </div>

    @if (!ViewData.ContainsKey("HideFooter"))
    {
        @await Html.PartialAsync("Footer")
    }

    <script>
        @if (TempData.ContainsKey("addedToBasket"))
        {
            TempData.Remove("addedToBasket");
            <text>
                var addedToBasket = true;
            </text>
        }
    </script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script type="text/javascript" src="/js/main.js"></script>
    @await RenderSectionAsync("scripts", false) 
</body>
</html>