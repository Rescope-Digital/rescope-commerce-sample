@model OrderDeliveredEmailTemplate
@inject IProductStore _productStore;
@{
    Layout = "_Layout.cshtml";
}

<p style="font-family: Helvetica, sans-serif; font-size: 16px; font-weight: normal; margin: 0; margin-bottom: 16px;">
    Hi @Model.Order.BillingAddress?.FirstName,
</p>

<p style="font-family: Helvetica, sans-serif; font-size: 16px; font-weight: normal; margin: 0; margin-bottom: 16px;">
    Your order (<b>@Model.Order.OrderNumber</b>) has been marked as delivered. Thank you for shopping with us!
</p>